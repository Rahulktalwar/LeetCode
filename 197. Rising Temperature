select w1.id
from weather w1
join weather w2 on w1.temperature > w2.temperature
and datediff(w1.recorddate,w2.recorddate)=1


---------------------------------
select w2.id as Id
from weather w1
join weather w2 
on w2.recorddate > w1.recorddate and (w2.recorddate - w1.recorddate)=1
AND w2.temperature > w1.temperature 
